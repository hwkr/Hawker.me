---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";

const getIcon = async (path: string) =>
  (await import(/* @vite-ignore */ `${path}?raw`)).default;

const links = [
  {
    href: "https://www.messenger.com/t/bnhwkr",
    label: "Chat with me",
    icon: await getIcon("../assets/icons/social-facebook-messenger-bubble.svg"),
  },
  {
    href: "https://twitter.com/bnhwkr/",
    label: "Tweet me",
    icon: await getIcon("../assets/icons/social-twitter.svg"),
  },
  {
    href: "http://www.facebook.com/bnhwkr/",
    label: "Friend me",
    icon: await getIcon("../assets/icons/social-facebook.svg"),
  },
  {
    href: "http://github.com/hwkr",
    label: "Develop with me",
    icon: await getIcon("../assets/icons/social-github.svg"),
  },
  {
    href: "https://dribbble.com/hwkr",
    label: "Rebound me",
    icon: await getIcon("../assets/icons/social-dribbble.svg"),
  },
  {
    href: "http://ux.stackexchange.com/users/77302/brynn",
    label: "Exchange with me",
    icon: await getIcon("../assets/icons/social-stack-exchange.svg"),
  },
  {
    href: "https://steamcommunity.com/id/FreckleBytes/",
    label: "Game with me",
    icon: await getIcon("../assets/icons/social-steam.svg"),
  },
];
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="flex items-center h-screen max-w-screen-sm px-4 mx-auto w-full">
      <div class="flex flex-col gap-4">
        <h1 class="flex flex-col gap-2.5 px-2">
          <big
            class="text-8xl text-indigo-500 font-extrabold relative left-[-1%]"
          >
            Brynn
            <br />
            Hawker
          </big>
          <small class="text-[2rem] leading-none font-bold text-gray-500"
            >Designer &times; Developer</small
          >
        </h1>
        <ul class="flex gap-0.5">
          {
            links.map(({ href, label, icon }) => (
              <li>
                <Link href={href} label={label} icon={icon} />
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </main>
</Layout>
